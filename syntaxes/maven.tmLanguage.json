{
    "name": "Maven POM",
    "scopeName": "text.xml.maven",
    "fileTypes": [
        "pom",
        "xml"
    ],
    "patterns": [
        {
            "include": "#xml-decl"
        },
        {
            "include": "#project-tag"
        },
        {
            "include": "#non-highlight-tags"
        },
        {
            "include": "#properties-children"
        },
        {
            "include": "#group-tag"
        },
        {
            "include": "#member-tag"
        },
        {
            "include": "#execution-tags"
        },
        {
            "include": "#fqdn-tags"
        },
        {
            "include": "#build-tags"
        },
        {
            "include": "#maven-tags"
        },
        {
            "include": "#xml-tags"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#ref"
        }
    ],
    "repository": {
        "project-tag": {
            "patterns": [
                {
                    "begin": "<project\\b",
                    "end": ">",
                    "name": "maven.tag.non-highlight"
                }
            ]
        },
        "non-highlight-tags": {
            "patterns": [
                {
                    "match": "</?(modelVersion)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.non-highlight"
                        }
                    }
                }
            ]
        },
        "build-tags": {
            "patterns": [
                {
                    "match": "</?(build)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.build"
                        }
                    }
                }
            ]
        },
        "properties-children": {
            "patterns": [
                {
                    "begin": "(<properties\\b[^>]*>)",
                    "end": "(</properties>)",
                    "beginCaptures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "<!--",
                            "end": "-->",
                            "name": "maven.tag.non-highlight"
                        },
                        {
                            "match": "</?.+?>",
                            "name": "maven.tag.property"
                        },
                        {
                            "include": "#ref"
                        }
                    ]
                }
            ]
        },
        "group-tag": {
            "patterns": [
                {
                    "match": "</?(properties|dependencies|plugins|profiles)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    }
                }
            ]
        },
        "member-tag": {
            "patterns": [
                {
                    "match": "</?(property|dependency|plugin|profile)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.member"
                        }
                    }
                }
            ]
        },
        "execution-tags": {
            "patterns": [
                {
                    "match": "</?(executions|execution|goals|goal|phase)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.execution"
                        }
                    }
                }
            ]
        },
        "fqdn-tags": {
            "patterns": [
                {
                    "match": "</?(groupId|artifactId|version)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.fqdn"
                        }
                    }
                }
            ]
        },
        "maven-tags": {
            "patterns": [
                {
                    "match": "</?(packaging|scope|parent|configuration|phase|modules|module)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.standard"
                        }
                    }
                }
            ]
        },
        "xml-tags": {
            "patterns": [
                {
                    "match": "</?.+?>",
                    "name": "maven.tag.custom"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "maven.comment",
                    "begin": "<!--",
                    "end": "-->",
                    "contentName": "maven.comment"
                }
            ]
        },
        "ref": {
            "patterns": [
                {
                    "name": "maven.ref",
                    "begin": "\\$\\{",
                    "end": "\\}",
                    "contentName": "maven.ref"
                }
            ]
        },
        "xml-decl": {
            "patterns": [
                {
                    "begin": "<\\?xml",
                    "end": "\\?>",
                    "name": "maven.tag.non-highlight"
                }
            ]
        }
    }
}