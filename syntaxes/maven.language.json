{
    "name": "Maven POM",
    "scopeName": "text.xml.maven",
    "fileTypes": [
        "pom",
        "xml"
    ],
    "patterns": [
        {
            "include": "#xml-decl"
        },
        {
            "include": "#non-highlight-tags"
        },
        {
            "include": "#properties-children"
        },
        {
            "include": "#group-tag"
        },
        {
            "include": "#member-tag"
        },
        {
            "include": "#execution-tags"
        },
        {
            "include": "#fqdn-tags"
        },
        {
            "include": "#build-tags"
        },
        {
            "include": "#maven-tags"
        },
        {
            "include": "#custom-tags"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#ref"
        }
    ],
    "repository": {
        "xml-decl": {
            "patterns": [
                {
                    "begin": "<\\?xml",
                    "end": "\\?>",
                    "name": "maven.tag.non-highlight"
                }
            ]
        },
        "non-highlight-tags": {
            "patterns": [
                {
                    "begin": "<project\\b",
                    "end": ">",
                    "name": "maven.tag.non-highlight"
                },
                {
                    "begin": "</project\\b",
                    "end": ">",
                    "name": "maven.tag.non-highlight"
                },
                {
                    "match": "</?(modelVersion)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.non-highlight"
                        }
                    }
                }
            ]
        },
        "properties-children": {
            "patterns": [
                {
                    "begin": "(<properties\\b[^>]*>)",
                    "end": "(</properties>)",
                    "beginCaptures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "<!--",
                            "end": "-->",
                            "name": "maven.tag.non-highlight"
                        },
                        {
                            "match": "</?.+?>",
                            "name": "maven.tag.property"
                        },
                        {
                            "include": "#ref"
                        }
                    ]
                }
            ]
        },
        "group-tag": {
            "patterns": [
                {
                    "match": "</?(properties|extensions|dependencyManagement|dependencies|pluginManagement|plugins|profiles|modules|repositories|pluginRepositories|resources|testResources|licenses|developers|contributors|notifiers|mailingLists)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.group"
                        }
                    }
                }
            ]
        },
        "member-tag": {
            "patterns": [
                {
                    "match": "</?(property|extension|dependency|plugin|profile|module|repository|pluginRepository|resource|testResource|license|developer|contributor|notifier|mailingList)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.member"
                        }
                    }
                }
            ]
        },
        "execution-tags": {
            "patterns": [
                {
                    "match": "</?(executions|execution|goals|goal|phase)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.execution"
                        }
                    }
                }
            ]
        },
        "fqdn-tags": {
            "patterns": [
                {
                    "match": "</?(groupId|artifactId|version)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.fqdn"
                        }
                    }
                }
            ]
        },
        "maven-tags": {
            "patterns": [
                {
                    "match": "</?(packaging|parent)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.basics"
                        }
                    }
                },
                {
                    "match": "</?(build|reporting)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.build"
                        }
                    }
                },
                {
                    "match": "</?(name|description|url|inceptionYear|licenses|organization|developers|contributors)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.moreinfo"
                        }
                    }
                },
                {
                    "match": "</?(issueManagement|ciManagement|scm|prerequisites|distributionManagement)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.environment"
                        }
                    }
                },
                {
                    "match": "</?(configuration|activation)\\b[^>]*>",
                    "captures": {
                        "0": {
                            "name": "maven.tag.configuration"
                        }
                    }
                }
            ]
        },
        "custom-tags": {
            "patterns": [
                {
                    "match": "</?.+?>",
                    "name": "maven.tag.custom"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "xml.comment",
                    "begin": "<!--",
                    "end": "-->",
                    "contentName": "xml.comment"
                }
            ]
        },
        "ref": {
            "patterns": [
                {
                    "name": "maven.ref",
                    "begin": "\\$\\{",
                    "end": "\\}",
                    "contentName": "maven.ref"
                }
            ]
        }
    }
}